<%- include('partials/header') %>

    <div class="dashhead-div">

        <h3 class="dashboardHead">Welcome<span> Admin</span> .</h3>


        <div class="dashlogout">
            <a href="/admin/logout"><button>Logout</button></a>
        </div>

    </div>

    <hr class="dashhr">

    <!-- Main Container -->


    <div class="dashboardContainer">

        <div class="dashsidepanel">
            <h4>Click to Insert Data!</h4>

            <ul>
                <li><a class="" href="#shop-div"> Add Shop</a></li>
                <li><a href="#product-div"> Add Products</a></li>

            </ul>
            <h4>Click to View Data!</h4>
            <ul>
                <li><a href="#shops"> View Shop</a></li>
                <li><a href="#products"> View Product</a></li>
                <li><a href="#orders"> View Orders</a></li>
                <li><a href="#visits"> View Visits</a></li>
                <li><a href="#contains"> View Contains</a></li>

            </ul>

        </div>

        <div class="insertContainer" id="shop-div">
            <h2 class="insert-name">Insert new Shop</h2>

            <form action="/shop/add" method="post">

                <ul class="insertlist">
                    <!-- <li class="insert-li"> <input placeholder="Shop id" name="id" type="text" class="insert-input"> </li> -->
                    <li class="insert-li"> <input required placeholder="Shop name" name="name" type="text" class="insert-input"> </li>
                    <li class="insert-li"> <input required placeholder="Shop loc" name="loc" type="text" class="insert-input"> </li>
                    <li class="insert-li"> <input required placeholder="Shop phone" name="phone" type="text" class="insert-input"> </li>
                    <li class="insert-li"> <input required placeholder="Shop email" name="email" type="text" class="insert-input"> </li>
                </ul>
                <div class="insert-btn-div">
                    <button class="insert-submit" type="submit">Submit</button>
                </div>

            </form>
        </div>

        <div class="insertContainer" id="product-div">
            <h2 class="insert-name">Insert new Product</h2>

            <form action="/product" method="post">

                <ul class="insertlist">
                    <li class="insert-li"><input required placeholder="Product id" name="id" type="number" class="insert-input"> </li>
                    <li class="insert-li"><input required placeholder="Shop id" name="shopId" type="number" class="insert-input"> </li>
                    <li class="insert-li"><input required placeholder="Product name" name="name" type="text" class="insert-input"> </li>
                    <li class="insert-li"><input required placeholder="Product price" name="price" type="number" class="insert-input"> </li>
                    <li class="insert-li"><input required placeholder="Product type" name="type" type="text" class="insert-input"> </li>
                    <li class="insert-li"><input required placeholder="Stocks" name="stocks" type="number" class="insert-input"> </li>
                    <li class="insert-li"><input required placeholder="Brand" name="brand" type="text" class="insert-input"> </li>
                </ul>
                <div class="insert-btn-div">
                    <button class="insert-submit" type="submit">Submit</button>
                </div>

            </form>
        </div>
        <% if(Angadi.length != 0 && Saman.length != 0 ) {%>
            <div class="dash-tips">

                <h3>: Summary :</h3>
                <p>Recent Product id : <span> <%=Saman.slice(-1)[0].Product_id%> </span></p>
                <p>Recent Shop id : <span><%= Angadi.slice(-1)[0].Shop_id%></span></p>

                <h3>: Total Counts :</h3>
                <p>Product count : <span><%= Saman.length %></span></p>
                <p>Shop count : <span><%= Angadi.length %></span></p>

            </div>
            <% }%>


    </div>

    <hr class="dashhr">

    <div class="viewonly-container">
        <!-- ORDERS -->
        <div class="view-data orders" id="orders">
            <h2>Orders data</h2>
            <table class="data-table">
                <tr>
                    <th>Order id</th>
                    <th>Cust id</th>
                    <th>Shop id</th>
                    <th>Product id</th>
                    <th>Order date</th>

                </tr>

                <% Orders.forEach(order => { %>
                    <tr>
                        <td>
                            <%=order.Order_id %>
                        </td>
                        <td>
                            <%=order.Cust_id %>
                        </td>
                        <td>
                            <%=order.Shop_id %>
                        </td>
                        <td>
                            <%=order.Product_id %>
                        </td>
                        <td>
                            <%=order.Order_date %>
                        </td>

                    </tr>

                    <%})%>

            </table>

        </div>
        <!-- SHOP -->
        <div class="view-data shop" id="shops">
            <h2>Shop data</h2>

            <table class="data-table">
                <tr>
                    <th>Shop id</th>
                    <th>Shop name</th>
                    <th>Shop loc</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th class="green"> <i class="fas fa-edit"></i> </th>
                    <th class="red"> <i class="fas fa-trash"></i> </th>
                </tr>

                <% Angadi.forEach(shop => { %>

                    <tr>
                        <td>
                            <%=shop.Shop_id%>
                        </td>
                        <td>
                            <%=shop.Shop_name%>
                        </td>
                        <td>
                            <%=shop.Shop_loc%>
                        </td>
                        <td>
                            <%=shop.Phone%>
                        </td>
                        <td>
                            <%=shop.Email%>
                        </td>
                        <td>
                            <a href="/change/modify/SHOP/<%=shop.Shop_id%>">
                                <div class="mod"></div>
                            </a>
                        </td>
                        <td>

                            <a href="/change/delete/SHOP/<%=shop.Shop_id%>">
                                <div class="dlt"></div>
                            </a>
                        </td>
                    </tr>


                    <%})%>






            </table>

        </div>
        <!-- PRODUCTS -->
        <div class="view-data products" id="products">
            <h2>Product data</h2>
            <table class="data-table">
                <tr>
                    <th>Product id</th>
                    <th>Shop id</th>
                    <th>Product name</th>
                    <th>Price(Rs)</th>
                    <th>Stocks</th>
                    <th>Type</th>
                    <th>Brand</th>
                    <th class="green"> <i class="fas fa-edit"></i> </th>
                    <th class="red"> <i class="fas fa-trash"></i> </th>
                </tr>

                <% Saman.forEach(product => { %>
                    <tr>
                        <td>
                            <%=product.Product_id%>
                        </td>
                        <td>
                            <%=product.Shop_id%>
                        </td>
                        <td>
                            <%=product.Product_name%>
                        </td>
                        <td>
                            <%=product.Price%>
                        </td>
                        <td>
                            <%=product.Stocks%>
                        </td>
                        <td>
                            <%=product.Type%>
                        </td>
                        <td>
                            <%=product.Brand%>
                        </td>
                        <td>
                            <a href="/change/modify/PRODUCTS/<%=product.Product_id%>">
                                <div class="mod"></div>
                            </a>
                        </td>
                        <td>

                            <a href="/change/delete/PRODUCTS/<%=product.Product_id%>">
                                <div class="dlt"></div>
                            </a>
                        </td>

                    </tr>
                    <%})%>



            </table>

        </div>
        <!-- VISITS-CONTAINS -->
        <div class="visits-contains">
            <!-- VISITS -->
            <div class="view-data visits" id="visits">
                <h2>Visits data</h2>
                <table class="data-table">
                    <tr>
                        <th>Cust id</th>
                        <th>Shop id</th>
                    </tr>
                    <% Orders.forEach(visits => { %>
                        <tr>
                            <td>
                                <%=visits.Cust_id%>
                            </td>
                            <td>
                                <%=visits.Shop_id%>
                            </td>
                        </tr>
                        <%})%>

                </table>
            </div>
            <!-- CONTAINS -->
            <div class="view-data contains" id="contains">
                <h2>Contains data</h2>
                <table class="data-table">
                    <tr>
                        <th>Product id</th>
                        <th>Order id</th>
                    </tr>
                    <% Orders.forEach(contains => { %>
                        <tr>
                            <td>
                                <%= contains.Product_id%>
                            </td>
                            <td>
                                <%= contains.Order_id%>
                            </td>
                        </tr>
                        <% })%>
                </table>

            </div>

        </div>



    </div>

    </div>

    <div class="dashboard-up">
        <a href="#nav"> <i class="dashboard-up-icon fas fa-caret-up"></i> </a>

    </div>


    <%- include('partials/footer') %>